<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="shortcut icon" href="/images/new.ico"/>
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/guwang.css">
  <!--STYLES END-->
  <!--SCRIPTS-->
  <script src="/js/dependencies/jquery-1.11.0.js"></script>
  <script src="/js/guwang_houtai.js"></script>
  <!--SCRIPTS END-->
  <title>蒙面股王后台管理系统</title>
</head>
<body>
<div class="mengmianguwang">
  <include(data.sideBar) selected='${data.selected}' />
  <include('./header.marko') module='${data.module}' />
  <section class="section">
    <div class="mengliaoguanli">
      <div class="content">
        <div class="mengliao">
          <div class="handle dz_fanhui">
            <ul>
              <li class="pinglun"><a href="#">发表评论</a>
              </li>
              <li><a href="javascript:history.back(-1)">返回</a></li>
            </ul>
          </div>
          <div class="pinglun_info">
            <h4>评论列表<span>(${data.nComment})</span></h4>
            <div class="pl_xian"></div>
            <div class="pinglun_neirong">
              <div for(c in data.comments) class="pinglun_list">
                <div class="pinglun_right">${c.time.toLocaleString()}</div>
                <div class="pinglun_left">
                  <img src="${c.author.avatar}" alt=""/>
					 				<span class="name">${c.author.name}</span>
                </div>
                <a href="/content/comment/delete?id=${c.id}"><p class="remove clear sc">删除</p></a>
                <p class="pinglun_nr clear">${c.content}</p>
              </div>
            </div>

            <div class="tiaozhuan">
              <var id=data.id page=parseInt(data.page) nPage=data.nPage/>
              <div class="page-yeshu">
                <a href="/content/comment/list?id=${id}"><span>首页</span></a>
                <a href="${page === 1 ? '#' : ('/content/comment/list?id=${id}&page=' + (page - 1))}">
                  <span>前一页</span>
                </a>
                <strong class="at_yeshu">${page}</strong>
                <strong>${nPage}</strong>
                <a href="${page === nPage ? '#' : ('/content/comment/list?id=${id}&page=' + (parseInt(page) + 1))}">
                  <span>后一页</span>
                </a>
                <a href="${'/content/comment/list?id=${id}&page=' + nPage}"><span>尾页</span></a>
              </div>
              <div class="ystz">
                <form action="#">
                <input id="dangqianye" type="number" class="tiaozhuanyeshu"
                       value="${page}" min="1" max="${nPage}"/>
                  <span id="zongyeshu"></span>
                </form>
                <span class="tiaozhuan-btn"
                      onclick="var page = document.getElementById('dangqianye').value; if (page) window.location = '/content/comment/list?id=${id}&page=' + page">跳转</span>
                </div>
            </div>

          </div>
        </div>

      </div>
    </div>
  </section>
  <footer class="footer">
    Copyright © 2016 蒙面股王
  </footer>
</div>
</body>
</html>
