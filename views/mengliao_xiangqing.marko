<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="shortcut icon" href="/images/new.ico"/>
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/guwang.css">
  <!--STYLES END-->
  <!--SCRIPTS-->
  <script src="/js/dependencies/jquery-1.11.0.js"></script>
  <script src="/js/guwang_houtai.js"></script>
  <!--SCRIPTS END-->
  <title>蒙面股王后台管理系统</title>
</head>
<body>
<div class="mengmianguwang">
  <include(data.sideBar) selected='${data.selected}' />
  <include('./header.marko') module='${data.module}' />
  <section class="section">
    <div class="mengliaoguanli">
      <div class="content">
        <div class="mengliao">
          <var m=data.mengliao/>
          <div class="handle">
            <ul>
              <li><a href="pinglun_xiangqing.html">评论<strong>(${m.nComment})</strong></a>
              </li>
              <li><a href="dianzan.html">点赞<strong>(${m.nLike})</strong></a></li>
              <li class="shanchu"><a href="/content/mengliao/delete?id=${m.id}">删除</a></li>
              <li><a href="javascript:history.back(-1)">返回</a></li>
            </ul>
          </div>
          <div class="fabuzhe_info">
            <div class="fabu_left">
              <h3>发布者信息</h3>
              <div class="xian"></div>
              <div class="fabuzhe_info  clear">
                <div class="fabuzhe_name">
                  <p>昵称：<span>${m.authorRole.name}</span></p>
                  <p>关联账户：<span>${m.author.name}</span></p>
                </div>
                <div class="fabuzhe_fans">
                  <p>猛料：<span>${m.nMengliao}</span></p>
                  <p>粉丝：<span>${m.nFollower}</span></p>
                </div>
                <div class="xian"></div>
                <h3>猛料详情</h3>
                <div class="xian"></div>
                <div class="time">
                  发布时间：<span>${m.time.toLocaleString()}</span>
                </div>
                <div class="mengliaoxiangqing_info">
                  <for(c in m.contents)>
                    <span if(c.type=== '1')>
                      <img src="${c.content}" alt=""/>
                    </span>
                    <p else>
                      ${c.content}
                    </p>
                  </for>
                </div>
              </div>
            </div>
            <div class="friendlink">
              <h4>相关链接</h4>
              <a for(r in m.relatedLinks) href="${r.url}">${r.title}</a>
            </div>
          </div>
        </div>
      </div>

    </div>
  </section>
  <footer class="footer">
    Copyright © 2016 蒙面股王
  </footer>
</div>
</body>
</html>
