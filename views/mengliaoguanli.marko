<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/guwang.css">
    <!--STYLES END-->
    <!--SCRIPTS-->
    <script src="/js/dependencies/jquery-1.11.0.js"></script>
    <!--SCRIPTS END-->
		<title>蒙面股王后台管理系统</title>
	</head>
	<body>
		<div class="mengmianguwang">
		  <include('./header.marko') module='${data.module}' />
			<section class="section">
			 <div class="mengliaoguanli">
			   <include(data.sideBar) selected='${data.selected}' />
		 		 <div class="content">
		 		 	<div class="mengliao">
		 		 		<div class="search">
		 		 			<div class="sousuo">
					             <input type="search" class="text" placeholder="输入昵称、关键词等" />
					             <input type="submit" class="buttom" value="搜索" />
							</div>
		 		 		</div>
		 		 		<div class="mengliao_info clear">
		 		 		  <div class="mengliao_ul">
                <ul class="mengliao_nav">
                  <li>发布者</li>
                  <li>发布时间</li>
                  <li>点赞数</li>
                  <li>评论数</li>
                  <li class="neirong">内容概要</li>
                  <li>操作</li>
                </ul>
                <ul for(m in data.mengliaos) class="mengliao_list">
                  <a href="/content/mengliao/detail?id=${m.id}">
                  <li>${m.authorRole.name}</li>
                  <!--li><span>2016/4/30</span>&nbsp;&nbsp;<span>11:50</span></li-->
                  <li><span>${m.time.toDateString()}</span></li>
                  <li>${m.nLike}</li>
                  <li>${m.nComment}</li>
                  <li if(m.contents.length) class="neirong">
                    ${m.contents[0].content}
                  </li>
                  <li>
                    <span><a href="/content/mengliao/detail?id=${m.id}">详情</a></span>&nbsp;
                    <a href='/content/mengliao/delete?id=${m.id}'><span class="remove publics">删除</span></a>
                  </li>
                  </a>
                </ul>
		 		 			</div>

		 		 			<div class="tiaozhuan">
		 		 			  <var page=parseInt(data.page) nPage=data.nPage/>
								<div class="page-yeshu">
									<a href="/content/mengliao/list"><span>首页</span></a>
									<a href="${page === 1 ? '#' : ('/content/mengliao/list?page=' + (page - 1))}"><span>上一页</span></a>
									<a href="${page === nPage ? '#' : ('/content/mengliao/list?page=' + (parseInt(page) + 1))}"><span>下一页</span></a>
									<a href="${'/content/mengliao/list?page=' + nPage}"><span>尾页</span></a>
								</div>
								<div class="ystz">
									<form action="#">
										<input id="dangqianye" type="number" class="tiaozhuanyeshu" value="${page}" min="1" max="${nPage}" />
										<span id="zongyeshu"></span>
									</form>
									<span class="tiaozhuan-btn" onclick="var page = document.getElementById('dangqianye').value; if (page) window.location = '/content/mengliao/list?page=' + page">跳转</span>
								</div>
							</div>

		 		 		</div>
		 		 	</div>

		 		 </div>
			 </div>
			</section>
			<footer class="footer" >
				 Copyright © 2016  蒙面股王
		  </footer>
		</div>
	</body>
</html>
