<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
    <!--STYLES-->
    <link rel="stylesheet" href="/styles/reset.css">
    <link rel="stylesheet" href="/styles/guwang.css">
    <!--STYLES END-->
    <!--SCRIPTS-->
    <script src="/js/dependencies/jquery-1.11.0.js"></script>
    <script src="/js/guwang_houtai.js"></script>
    <!--SCRIPTS END-->
		<title>蒙面股王后台管理系统</title>
	</head>
	<body>
		<div class="mengmianguwang">
			<include('./header.marko') module='${data.module}' />
			<section class="section">
			 <div class="mengliaoguanli">
		 		 <include(data.sideBar) selected='${data.selected}' />
		 		 <div class="content">
		 		 	<div class="mengliao">
		 		 		<div class="search">
		 		 			<div class="sousuo">
					             <input type="search" class="text" placeholder="输入昵称、关键词等"/>
					             <input type="submit" class="buttom" value="搜索" />
							</div>
		 		 		</div>
		 		 		<div class="mengliao_info clear">
		 		 		  <div class="mengliao_ul">
                <ul class="mengliao_nav">
                  <li class="guanlian">昵称</li>
                  <li class="guanlian">关联账号昵称</li>
                  <li>猛料数量</li>
                  <li>粉丝数量</li>
                  <li>状态</li>
                  <li>操作</li>
                </ul>
                <ul for(r in data.roles) class="mengliao_list">
                 <a href="${r.user ? '/user/detail?type=card&id=' + r.user.id : '#'}">
                  <li class="guanlian">${r.name}</li>
                  <li class="guanlian">${r.user ? r.user.name : '无'}</li>
                  <li>${r.user ? r.user.nMengliao : '无'}</li>
                  <li>${r.user ? r.user.nFollowing : '无'}</li>
                  <li>${r.user ? '正常' : '未赋予'}</li>
                  <li>
                    <span><a href="${r.user ? '/user/detail?type=card&id=' + r.user.id : '#'}">详情</a></span>&nbsp;
                    <span class="public"><a href="/user/assign?id=${r.id}">修改</a></span>
                  </li>
                 </a>
                </ul>
		 		 			</div>

		 		 			<div class="tiaozhuan">
		 		 			  <var page=parseInt(data.page) nPage=data.nPage/>
								<div class="page-yeshu">
									<a href="/user/list?type=card"><span>首页</span></a>
									<a href="${page === 1 ? '#' : ('/user/list?type=card&page=' + (page - 1))}"><span>上一页</span></a>
									<a href="${page === nPage ? '#' : ('/user/list?type=card&page=' + (parseInt(page) + 1))}"><span>下一页</span></a>
									<a href="${'/user/list?type=card&page=' + nPage}"><span>尾页</span></a>
								</div>
								<div class="ystz">
									<form action="#">
										<input id="dangqianye" type="number" class="tiaozhuanyeshu" value="${page}" min="1" max="${nPage}" />
										<span id="zongyeshu"></span>
									</form>
									<span class="tiaozhuan-btn" onclick="var page = document.getElementById('dangqianye').value; if (page) window.location = '/user/list?type=card&page=' + page">跳转</span>
								</div>
							</div>

		 		 		</div>
		 		 	</div>

		 		 </div>
			 </div>
			</section>
			<footer class="footer" >
				 Copyright © 2016  蒙面股王
		  </footer>
		</div>
	</body>
</html>
