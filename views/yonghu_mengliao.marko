<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="shortcut icon" href="/images/new.ico"/>
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/guwang.css">
  <!--STYLES END-->
  <!--SCRIPTS-->
  <script src="/js/dependencies/jquery-1.11.0.js"></script>
  <script src="/js/guwang_houtai.js"></script>
  <!--SCRIPTS END-->
  <title>蒙面股王后台管理系统</title>
</head>
<body>
<div class="mengmianguwang">
  <include(data.sideBar) selected='${data.selected}' />
  <include('./header.marko') module='${data.module}' />
  <section class="section">
    <div class="mengliaoguanli">
      <div class="content">
        <div class="mengliao">
          <div class="handle dz_fanhui">
            <ul>
              <li></li>
              <li><a href="javascript:history.back(-1)">返回</a></li>
            </ul>
          </div>
          <div class="menglaioxiangqing_info">
            <ul class="mengliaoxiangqing_nav">
              <li>发布者</li>
              <li>发布时间</li>
              <li>点赞数</li>
              <li>评论数</li>
              <li class="ml_neirong">内容概要</li>
            </ul>
            <ul for(m in data.mengliaos) class="mengliaoxiangqing_list odd">
              <a href="/content/mengliao/detail?id=${m.id}">
                <li>${m.authorRole.name}</li>
                <li>${m.time.toLocaleString()}</li>
                <li>${m.nLike}</li>
                <li>${m.nComment}</li>
                <li if(m.contents.length) class="neirong">
                  ${m.contents[0].content}
                </li>
              </a>
            </ul>
          </div>

          <div class="tiaozhuan">
            <var id=data.id page=parseInt(data.page) nPage=data.nPage/>
            <div class="page-yeshu">
              <a href="/user/like?id=${id}"><span>首页</span></a>
              <a href="${page === 1 ? '#' : ('/user/like?id=${id}&page=' + (page - 1))}">
                <span>前一页</span>
              </a>
              <strong class="at_yeshu">${page}</strong>
              <strong>${nPage}</strong>
              <a href="${page === nPage ? '#' : ('/user/like?id=${id}&page=' + (parseInt(page) + 1))}">
                <span>后一页</span>
              </a>
              <a href="${'/user/like?id=${id}&page=' + nPage}"><span>尾页</span></a>
            </div>
            <div class="ystz">
              <form action="#">
                <input id="dangqianye" type="number" class="tiaozhuanyeshu"
                       value="${page}" min="1" max="${nPage}"/>
                <span id="zongyeshu"></span>
              </form>
              <span class="tiaozhuan-btn"
                    onclick="var page = document.getElementById('dangqianye').value; if (page) window.location = '/user/like?id=${id}&page=' + page">跳转</span>
            </div>
          </div>

        </div>

      </div>
    </div>
  </section>
  <footer class="footer">
    Copyright © 2016 蒙面股王
  </footer>
</div>
</body>
</html>
<script>

  /*跳转页面*/
  function shouye() {
    alert("首页");
  }
  ;
  function prev_ye() {
    alert("上一页");
  }
  ;

  function next_ye() {
    alert("下一页");
  }
  ;
  function last_ye() {
    alert("最后一页");
  }
  ;

  function go_to() {
    alert("跳转");
  }
  ;
</script>
