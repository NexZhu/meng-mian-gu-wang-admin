<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <link rel="shortcut icon" href="/images/new.ico"/>
  <!--STYLES-->
  <link rel="stylesheet" href="/styles/reset.css">
  <link rel="stylesheet" href="/styles/guwang.css">
  <!--STYLES END-->
  <!--SCRIPTS-->
  <script src="/js/dependencies/jquery-1.11.0.js"></script>
  <script src="/js/guwang_houtai.js"></script>
  <!--SCRIPTS END-->
  <title>蒙面股王后台管理系统</title>
</head>
<body>
<div class="mengmianguwang">
  <include(data.sideBar) selected='${data.selected}' />
  <include('./header.marko') module='${data.module}' />
  <section class="section">
    <div class="mengliaoguanli">
      <div class="content">
        <div class="mengliao">
          <div class="handle dz_fanhui">
            <ul>
              <li></li>
              <li><a href="javascript:history.back(-1)">返回</a></li>
            </ul>
          </div>
          <div class="guanzhu_info">
            <ul class="guanzhu_nav">
              <li>昵称</li>
              <li>关联账号昵称</li>
              <li>猛料数量</li>
              <li>粉丝数量</li>
            </ul>
            <ul for(u in data.users) class="guanzhu_list odd">
              <a href="/user/detail?id=${u.id}">
                <li>${u.name}</li>
                <li>${u.role ? u.role.name : '无'}</li>
                <li>${u.nMengliao}</li>
                <li>${u.nFollower}</li>
              </a>
            </ul>
          </div>

          <div class="tiaozhuan">
            <var id=data.id page=parseInt(data.page) nPage=data.nPage/>
            <div class="page-yeshu">
              <a href="/user/following?id=${id}"><span>首页</span></a>
              <a href="${page === 1 ? '#' : ('/user/following?id=${id}&page=' + (page - 1))}">
                <span>前一页</span>
              </a>
              <strong class="at_yeshu">${page}</strong>
              <strong>${nPage}</strong>
              <a href="${page === nPage ? '#' : ('/user/following?id=${id}&page=' + (parseInt(page) + 1))}">
                <span>后一页</span>
              </a>
              <a href="${'/user/following?id=${id}&page=' + nPage}"><span>尾页</span></a>
            </div>
            <div class="ystz">
              <form action="#">
                <input id="dangqianye" type="number" class="tiaozhuanyeshu"
                       value="${page}" min="1" max="${nPage}"/>
                <span id="zongyeshu"></span>
              </form>
              <span class="tiaozhuan-btn"
                    onclick="var page = document.getElementById('dangqianye').value; if (page) window.location = '/user/following?id=${id}&page=' + page">跳转</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <footer class="footer">
    Copyright © 2016 蒙面股王
  </footer>
</div>
</body>
</html>
